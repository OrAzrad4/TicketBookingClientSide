<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>

<TabPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hit.client.TicketController" stylesheets="@style.css">

    <Tab text="Add Ticket" closable="false">
        <VBox alignment="CENTER" spacing="15">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

            <Label text="New Ticket System" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="tfId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Event Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="tfEventName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Customer Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="tfCustomerName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Price:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="tfPrice" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Save Ticket" onAction="#onAddTicketClick" style="-fx-base: #4CAF50;"/>
            <Label fx:id="lblAddStatus" textFill="blue"/>
        </VBox>
    </Tab>

    <Tab text="Search &amp; Manage" closable="false">
        <VBox spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="tfSearch" promptText="Search by event name..." HBox.hgrow="ALWAYS"/>
                <Button text="Search" onAction="#onSearchClick"/>
                <Button text="Delete Selected" onAction="#onDeleteClick" style="-fx-base: #f44336;"/>
            </HBox>

            <TableView fx:id="ticketsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="ID" prefWidth="50">
                        <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Event Name" prefWidth="150">
                        <cellValueFactory><PropertyValueFactory property="eventName"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Customer Name" prefWidth="150">
                        <cellValueFactory><PropertyValueFactory property="customerName"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Price" prefWidth="80">
                        <cellValueFactory><PropertyValueFactory property="price"/></cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>

            <Label fx:id="lblSearchStatus"/>
        </VBox>
    </Tab>
</TabPane>